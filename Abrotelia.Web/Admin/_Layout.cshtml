@using Abrotelia.Web.Code.Common;
<!doctype html>
<html lang="sl-SI">
<head>
    <meta charset="utf-8" />
    <title>@Page.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/Content/admin.min.css" />
</head>
<body itemscope itemtype="http://schema.org/WebApplication">

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <header role="banner" class="navbar-header">
                <a href="~/" itemprop="url" class="navbar-brand">@Site.Title</a>
            </header>
            <form action="@FormsAuthentication.LoginUrl" method="post">
                <input type="hidden" name="signout" value="true" />
                <input type="hidden" name="returnUrl" value="@HttpUtility.HtmlEncode(Request.RawUrl)" />
                <button type="submit" title="Prijavljen kot: @User.Identity.Name" class="btn btn-link pull-right">
                    Odjava &nbsp;<span class="glyphicon glyphicon-log-out"></span>
                </button>
            </form>
        </div>
    </nav>
    <div class="container-fluid">

        <div role="main" class="row">
            <aside>
                <nav class="col-sm-2 col-md-1 sidebar">
                    <ul class="nav nav-sidebar">
                        <li class='@(Request.RawUrl.ToLower().Contains("page") ? "active" : "")'><a href="~/Admin/Pages">Strani</a></li>
                    </ul>
                    <ul class="nav nav-sidebar">
                        <li class="header">Katalog umetnin</li>
                        <li class='@(Request.RawUrl.ToLower().Contains("author") ? "active" : "")'><a href="~/Admin/Authors">Avtorji</a></li>
                        <li class='@((Request.RawUrl.ToLower().Contains("galleryitem") || Request.RawUrl.ToLower().Contains("galleryitems")) && !Request.RawUrl.ToLower().Contains("featured") ? "active" : "")'>
                            <a href="~/Admin/GalleryItems">Likovna dela</a>
                        </li>
                        <li class='@(Request.RawUrl.ToLower().Contains("galleryitemsfeatured") ? "active" : "")'>
                            <a href="~/Admin/GalleryItemsFeatured">Predstavljeni artikli</a>
                        </li>
                    </ul>
                    <ul class="nav nav-sidebar">
                        <li class="header">Uporabniki</li>
                        <li class='@(Request.RawUrl.ToLower().Contains("newssubscription") ? "active" : "")'><a href="~/Admin/NewsSubscriptions">E-novice - prijave</a></li>
                    </ul>
                </nav>
            </aside>
            <div class="col-sm-10 col-sm-offset-1 col-md-11 col-md-offset-1 main">
                @RenderBody()
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.hotkeys.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-wysiwyg.js"></script>
    <script type="text/javascript" src="~/Scripts/abrotelia.js"></script>
</body>
</html>

